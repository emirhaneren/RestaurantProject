@model List<WebUI.Dtos.ContactDtos.ResultContactDto>
@foreach (var item in Model)
{
    <footer class="footer_section">
        <div class="container">
            <div class="row">
                <div class="col-md-4 footer-col">
                    <div class="footer_contact">
                        <h4>
                            Bize Ulaşın
                        </h4>
                        <div class="contact_link_box">
                            <a href="@item.Location" target="_blank">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>
                                    Lokasyon
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>
                                    Call @item.PhoneNumber
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span>
                                    @item.Mail
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 footer-col">
                    <div class="footer_detail">
                        <a href="/Default/Index/" class="footer-logo">
                            Kartal Restaurant
                        </a>
                        <p>
                            @item.FooterDescription
                        </p>
                        @await Component.InvokeAsync("_UILayoutSocialMediaPartialComponent")
                    </div>
                </div>
                <div class="col-md-4 footer-col">
                    <h4>
                        Hizmet Saatlerimiz
                    </h4>
                    <p>
                        Her Gün
                    </p>
                    <p>
                        09.00 AM  - 02.00 AM 
                    </p>
                </div>
            </div>
            <div class="footer-info">
                <p>
                    &copy; <span id="displayYear"></span> Tüm Hakları Saklıdır
                    <a href="https://github.com/emirhaneren/RestaurantProject" target="_blank">Kartal Restaurant</a><br><br>
                    &copy; <span id="displayYear"></span> Created by
                    <a href="https://www.linkedin.com/in/emirhaneren/" target="_blank">Emirhan Eren</a>
                </p>
            </div>
        </div>
    </footer>
}