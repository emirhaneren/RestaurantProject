        <script type="text/javascript">
            $(document).ready(()=>{
                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7034/SignalRHub").build();

                $("#connstatus").text(connection.state);

                connection.start().then(()=>{
                    $("#connstatus").text(connection.state);
                    setInterval(()=>{
                        connection.invoke("SendCategoryCount");
                        connection.invoke("SendProductCount");
                        connection.invoke("ActiveCategoryCount");
                        connection.invoke("PassiveCategoryCount");
                        connection.invoke("HamburgerCount");
                        connection.invoke("SoftDrinkCount");
                        connection.invoke("AverageProductPrice");
                        connection.invoke("ProductByMaxPrice");
                        connection.invoke("ProductByMinPrice");
                        connection.invoke("AverageHamburgerPrice");
                        connection.invoke("TotalOrderCount");
                        connection.invoke("TotalActiveOrderCount");
                        connection.invoke("LastOrderPrice");
                        connection.invoke("TotalMoneyCaseAmount");
                        connection.invoke("TotalTableCount");
                    },1000);

                }).catch((err)=>{  console.log(err);  });

                connection.on("ReceiveCategoryCount",(value)=>{
                    $("#categorycount").text(value);
                })
                connection.on("ReceiveProductCount",(value)=>{
                    $("#productcount").text(value);
                })
                connection.on("ReceiveActiveCategoryCount",(value)=>{
                    $("#activecategorycount").text(value);
                })
                connection.on("ReveicePassiveCategoryCount",(value)=>{
                    $("#passivecategorycount").text(value);
                })
                connection.on("ReceiveHamburgerCount",(value)=>{
                    $("#hamburgercount").text(value);
                })
                connection.on("ReveiceSoftDrinkCount",(value)=>{
                    $("#softdrinkcount").text(value);
                })
                connection.on("ReceiveAverageProductPrice",(value)=>{
                    $("#averageproductprice").text(value);
                })
                connection.on("ReceiveProductByMaxPrice",(value)=>{
                    $("#productbymaxprice").text(value);
                })
                connection.on("ReceiveProductByMinPrice",(value)=>{
                    $("#productbyminprice").text(value);
                })
                connection.on("ReceiveAverageHamburgerPrice",(value)=>{
                    $("#averagehamburgerprice").text(value);
                })
                connection.on("ReceiveTotalOrderCount",(value)=>{
                    $("#totalordercount").text(value);
                })
                connection.on("ReceiveTotalActiveOrderCount",(value)=>{
                    $("#totalactiveordercount").text(value);
                })
                connection.on("ReceiveLastOrderPrice",(value)=>{
                    $("#lastorderprice").text(value);
                })
                connection.on("ReceiveTotalMoneyCaseAmount",(value)=>{
                    $("#totalmoneycaseamount").text(value);
                })
                connection.on("ReceiveTotalTableCount",(value)=>{
                    $("#totalmenutablecount").text(value);
                })
            });
        </script>
