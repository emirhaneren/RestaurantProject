@model WebUI.Dtos.ContactDtos.UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Hakkımda Alanını Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="ContactID" />
                            <div class="form-group">
                                <label for="location">Konum (Adres) Giriniz :</label>
                                <input type="text" class="form-control" asp-for="Location" id="location">
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="phoneNumber">İletişim Numarasını Giriniz :</label>
                                <input type="tel" class="form-control" asp-for="PhoneNumber" id="phoneNumber">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="mail">İletişim Mail Adresin Giriniz :</label>
                                <input type="email" class="form-control" asp-for="Mail" id="mail">
                                <span asp-validation-for="Mail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="footerDescription">Alt Açıklamayı Giriniz :</label>
                                <input type="text" class="form-control" asp-for="FooterDescription" id="footerDescription">
                                <span asp-validation-for="FooterDescription" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">İletişim Kısmını Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

