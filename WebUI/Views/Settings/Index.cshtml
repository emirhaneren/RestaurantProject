@model WebUI.Dtos.IdentityDtos.UserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kullanıcı İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Kullanıcı Bilgileri Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryName">Adınız :</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryName">Soyadınız :</label>
                                <input type="text" class="form-control" asp-for="Surname" id="Surname">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryName">Mail Adresiniz :</label>
                                <input type="email" class="form-control" asp-for="Mail" id="mail">
                            </div>
                        </div> 
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryName">Kullanıcı Adınız :</label>
                                <input type="text" class="form-control" asp-for="Username" id="username">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryName">Şifreniz :</label>
                                <input type="password" class="form-control" asp-for="Password" id="password">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryName">Şifrenizi Onaylayın :</label>
                                <input type="password" class="form-control" asp-for="ConfirmPassword" id="cpassword">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Bilgileri Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

