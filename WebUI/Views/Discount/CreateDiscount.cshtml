@model WebUI.Dtos.DiscountDtos.CreateDiscountDto
@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İndirim Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="discountTitle">Ürün Adını Giriniz :</label>
                                <input type="text" class="form-control" asp-for="DiscountTitle" id="discountTitle">
                                <span asp-validation-for="DiscountTitle" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="amount">Ürün İndirim Oranını Giriniz :</label>
                                <input type="number" class="form-control" asp-for="Amount" id="amount">
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="discountDescription">Ürün Açıklamasını Giriniz :</label>
                                <input type="text" class="form-control" asp-for="DiscountDescription" id="discountDescription">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="imageUrl">Ürün Görselini Giriniz :</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">İndirimi Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

