@model WebUI.Dtos.SocialMediaDtos.CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Sosyal Medya Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Başlık Giriniz :</label>
                                <input type="text" class="form-control" asp-for="Title" id="title">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="url">URL Giriniz :</label>
                                <input type="text" class="form-control" asp-for="Url" id="url">
                                <span asp-validation-for="Url" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="icon">Icon Giriniz :</label>
                                <input type="text" class="form-control" asp-for="Icon" id="icon">
                                <span asp-validation-for="Icon" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Sosyal Medya Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

